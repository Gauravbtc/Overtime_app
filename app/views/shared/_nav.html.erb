<div class= "logo">
  <h1>Time Tracker </h1>
</div>

<% if current_user %>
  <ul class="custom-nav nav nav-tabs">
    <li class="nav-item">
      <%= link_to "Home", root_path, class: "nav-link #{active?(root_path)}"%>
    </li>
    <li class="nav-item">
      <%= link_to "Time Entries", posts_path ,
      class: "nav-link #{active?(posts_path)}" %>
    </li>

    <%= render "shared/audit_log" if policy(AuditLog).index? %>

    <%# end %>
    <li class="nav-item">
      <%= link_to "Add New Entry", new_post_path ,
      class: "nav-link #{active?(new_post_path)}", id: 'new_post_from_nav'
       %>
    </li>
    <li class="nav-item dropdown ml-md-auto">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Options
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <% if current_user&.type == "AdminUser" %>
          <li><%= link_to "Admin Dashboard", admin_root_path %></li>
        <% end %>
        <li class = "divider"></li>
        <li>
          <%= link_to "Logout", destroy_user_session_path,method: :delete %>
        </li>
      </ul>
    </li>
  </ul>
<% end %>