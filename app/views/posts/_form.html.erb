<%= form_for @post, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :overtime_request, class: "col-sm-2 control-lable" %>
    <%= f.text_field :overtime_request, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-lable" %>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rational, class: "col-sm-2 control-lable" %>
    <%= f.text_area :rational, class: "form-control" %>
  </div>

  <%= render partial: "status", locals: {f: f} if current_user.type == "AdminUser" %>
  <%= f.submit 'Save', class: "btn btn-primary btn-block" %>

<% end %>
